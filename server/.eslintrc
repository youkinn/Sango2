{
  "root": true,
  "plugins": ["node"],
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "amd": true,
    "mongo": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "node/no-unsupported-features": [2, {"version": 4}],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "no-console": 0,
    "no-debugger": 1
  }
}
