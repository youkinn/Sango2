{
  "root": true,
  "plugins": ['html'],
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "amd": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "modules": true
    }
  },
  "globals": {
    "Vue": false,
    "jiathis_mh5": false
  },
  "rules": {
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "no-console": 1,
    "no-debugger": 1
  }
}
