{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": false,
      "modules": true
    }
  },
  "globals": {
  },
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
